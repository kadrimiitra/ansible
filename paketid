- name: Kontrolli ja vajadusel paigalda tarkvara
  hosts: all
  become: true
  tasks:
    - name: Paigaldage vajalikud paketid Debian ja Ubuntu s端steemides
      when: ansible_distribution in ["Debian", "Ubuntu"]
      apt:
        name: "{{ item }}"
        state: present
        update_cache: yes
      loop:
        - snmpd
        - tmux
        - mc
        - wget
        - tree
        - git
      notify:
        - Installi puuduvad paketid

    - name: Paigaldage Docker jaoks vajalikud paketid Debian s端steemides
      when: inventory_hostname == "christen-dockerhost" and ansible_distribution == "Debian"
      apt:
        name: "{{ item }}"
        state: present
      loop:
        - apt-transport-https
        - ca-certificates
        - curl
        - gnupg-agent
        - software-properties-common
      notify:
        - Installi puuduvad paketid

    - name: Paigaldage vajalikud paketid CentOS s端steemides
      when: ansible_distribution == "CentOS"
      yum:
        name: "{{ item }}"
        state: present
      loop:
        - net-snmp
        - net-snmp-utils
        - tmux
        - mc
        - wget
        - tree
        - git
      notify:
        - Installi puuduvad paketid

    - name: Paigaldage vajalik tarkvara openSUSE s端steemides
      when: ansible_distribution == "openSUSE"
      zypper:
        name: "{{ item }}"
        state: present
      loop:
        - tmux
        - mc
        - wget
        - tree
        - git
        - net-snmp
      notify:
        - Installi puuduvad paketid

  handlers:
    - name: Installi puuduvad paketid
      debug:
        msg: "Paigaldatud puuduvad paketid masinale {{ inventory_hostname }}"
...
